<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--  Screen size  -->
        <StackPanel
        x:Name="spScreenSize"
        Grid.Row="0"
        Grid.Column="0"
        VerticalAlignment="Center"
        HorizontalAlignment="Center"
            Margin="10">
            <Label
        x:Name="lbScreenSize"
        Grid.Row="0"
                Content="Screen Size"
        ></Label>
            <RadioButton Margin="0 2 0 2" x:Name="rbSize800px" IsChecked="True">
                800x450
            </RadioButton>
            <RadioButton Margin="0 2 0 2" x:Name="rbSize1024px">
                1024x768
            </RadioButton>
            <RadioButton Margin="0 2 0 2" x:Name="rbSize845px">
                854x480
            </RadioButton>
            <RadioButton Margin="0 2 0 2" x:Name="rbSize640px">
                640x360
            </RadioButton>
            <RadioButton Margin="0 2 0 2" x:Name="rbSizeFullscreen">
                Fullscreen
            </RadioButton>
        </StackPanel>
        <!-- Language -->
        <StackPanel
    Grid.Row="1"
    Grid.Column="0"
    VerticalAlignment="Center"
    HorizontalAlignment="Center"
        Margin="10"
    >
            <Label x:Name="lbChooseLanguage" Content="Language" />
            <RadioButton Margin="0 2 0 2" x:Name="rbEng" Content="English" Checked="rbEng_Checked"/>
            <RadioButton Margin="0 2 0 2" x:Name="rbCro" Content="Croatian" Checked="rbCro_Checked"/>

        </StackPanel>
        <!-- Champ -->
        <StackPanel
    Grid.Row="0"
    Grid.Column="1"
    VerticalAlignment="Center"
    HorizontalAlignment="Center"
    >
            <Label x:Name="lbChooseChampionship"  Content="Championship"/>
            <RadioButton Margin="0 2 0 2" x:Name="rbFemale"  Content="Female" Checked="rbFemale_Checked"/>
            <RadioButton Margin="0 2 0 2" x:Name="rbMale"  Content="Male" Checked="rbMale_Checked"/>
        </StackPanel>
        <!-- Representation -->
        <StackPanel
    x:Name="spRepresentation"
    Grid.Row="1"
    Grid.Column="1"
    VerticalAlignment="Center"
    HorizontalAlignment="Center"
            Margin="0 0 20 0"
    >
            <Label 
        x:Name="lbRepHome"
        VerticalAlignment="Center"
        HorizontalAlignment="Center" 
                Content="Home Representation"/>
            <ComboBox
        x:Name="cbRepresentation"
        VerticalAlignment="Top"
        HorizontalAlignment="Center"
        MinWidth="150"
                SelectionChanged="OnHomeRepresentationChanged"
    >
            </ComboBox>
            <Label x:Name="lbRepHost"/>
            <Label 
        x:Name="lbGuest"
        VerticalAlignment="Center"
        HorizontalAlignment="Center"
        Content="Guest Representation"/>
            <ComboBox
        x:Name="cbRepresentationGuest"
        VerticalAlignment="Top"
        HorizontalAlignment="Center"
        MinWidth="150"
                SelectionChanged="OnRepresentationChanged"/>
            <Label x:Name="lbRepresentationGuest"/>
        </StackPanel>
        <Button
        x:Name="btnLandingContinue"
        Content="Continue"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="0 0 10 10"
        Width="75"
        Click="btnContinue_ClickAsync" 
        Grid.Column="1" 
        Grid.Row="1"/>
    </Grid>
</Window>
